    "keybindings": [
        {
            "command": "closeTab",
            "keys": [
                "ctrl+w"
            ]
        },
        {
            "command": "newTab",
            "keys": [
                "ctrl+t"
            ]
        },
        {
            "command": "splitVertical",
            "keys": [
                "ctrl+shift+alt+o"
            ]
        },
        {
            "command": "splitHorizontal",
            "keys": [
                "ctrl+shift+alt+i"
            ]
        },
        {
